generator client {
  provider = "prisma-client-js"
}

//set up password as "password"
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  
}

model Video {
  id        String   @id @default(cuid())
  video_id Int @unique
  title     String?
  search_term  String?
  reddit_id  String?
  reddit_title String?
  reddit_content String?
  reddit_comments String?
  script String?
  thumbnail String?
  trailer_url String?
  status_step Int?
  status String?
  youtube_url String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
